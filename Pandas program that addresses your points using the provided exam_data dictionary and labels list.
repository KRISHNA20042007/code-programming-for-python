import pandas as pd
import numpy as np

# Given data
exam_data = {
    'name': ['Anastasia', 'Dima', 'Katherine', 'James', 'Emily',
             'Michael', 'Matthew', 'Laura', 'Kevin', 'Jonas'],
    'score': [12.5, 9, 16.5, np.nan, 9, 20, 14.5, np.nan, 8, 19],
    'attempts': [1, 3, 2, 3, 2, 3, 1, 1, 2, 1],
    'qualify': ['yes', 'no', 'yes', 'no', 'no', 'yes', 'yes', 'no', 'no', 'yes']
}

labels = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j']

# i) Create and display DataFrame with specified index labels
df = pd.DataFrame(exam_data, index=labels)
print("DataFrame with index labels:")
print(df)

# ii) Change the name 'James' to 'Suresh' in the 'name' column
df.loc[df['name'] == 'James', 'name'] = 'Suresh'
print("\nDataFrame after changing 'James' to 'Suresh':")
print(df)

# iii) Insert a new column in the existing DataFrame
# Let's add a column 'passed' based on 'qualify' (yes -> True, no -> False)
df['passed'] = df['qualify'] == 'yes'
print("\nDataFrame after inserting new column 'passed':")
print(df)

# iv) Get list from DataFrame column headers
columns_list = df.columns.tolist()
print("\nList of DataFrame column headers:")
print(columns_list)

# v) Get list of DataFrame index labels (since v is same as iv in your prompt, I assume you meant index)
index_list = df.index.tolist()
print("\nList of DataFrame index labels:")
print(index_list)
